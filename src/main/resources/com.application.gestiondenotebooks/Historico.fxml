<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750" prefWidth="900" stylesheets="@style/historicoStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.gestiondenotebooks.controller.HistoricoController">


    <center>
        <Pane prefHeight="800" prefWidth="600" styleClass="main-pane">
            <children>


                <Label layoutX="28" layoutY="61" styleClass="titulo-principal" text="Historial de Préstamos">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font></Label>


                <Label layoutX="32" layoutY="94" styleClass="subtitulo" text="Listado de préstamos ya finalizados" />


                <ListView fx:id="listHistorial" layoutX="31" layoutY="125" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="250" prefWidth="850.0" styleClass="lista" />


                <Label layoutX="25" layoutY="388" styleClass="seccion-detalle" text="Detalle del préstamo seleccionado:" />


                <VBox layoutX="31" layoutY="427" spacing="8" styleClass="detalle-box">
                    <children>
                        <Label text="N° de Referencia:" />
                        <Label fx:id="lblNroReferencia" styleClass="detalle-label" />


                        <Label text="Docente:" />
                        <Label fx:id="lblDocente" styleClass="detalle-label" />


                        <Label text="Materia:" />
                        <Label fx:id="lblMateria" styleClass="detalle-label" />


                        <Label text="Horario:" />
                        <Label fx:id="lblHorario" styleClass="detalle-label" />


                        <Label text="Aula:" />
                        <Label fx:id="lblAula" styleClass="detalle-label" />


                        <Label text="Equipos:" />
                        <Label fx:id="lblEquipos" styleClass="detalle-label" />


                        <Label text="Fecha de cierre:" />
                        <Label fx:id="lblFechaFin" styleClass="detalle-label" />
                    </children>
                </VBox>


                <Button fx:id="btnVolver" layoutX="14" layoutY="14" onAction="#irAVentanaPrincipal" styleClass="btn-volver" text="Volver" />


            </children>
        </Pane>
    </center>
</BorderPane>