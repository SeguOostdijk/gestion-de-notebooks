<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="900.0" stylesheets="@style/devolucionStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.gestiondenotebooks.controller.DevolucionController">

    <center>
        <Pane fx:id="devolucionPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="670.0" prefWidth="594.0" style="-fx-border-style: solid;" BorderPane.alignment="CENTER">

            <children>
                <!-- Título -->
                <Label id="labelPrincipal" layoutX="25.0" layoutY="43.0" text="Gestión de Devolución de Equipos">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>

                <Label layoutX="25.0" layoutY="83.0" text="Registre las devoluciones correspondientes al préstamo seleccionado." />

                <!-- Campo de ingreso de código -->
                <HBox layoutX="31.0" layoutY="130.0" spacing="10.0" />

                      <!-- Listado de equipos -->
                <Label fx:id="labelDevolucionQR" layoutX="27.0" layoutY="280.0" text="Escanee el QR de cada equipo para su devolución " />
                <ListView fx:id="listEquipos" layoutX="27.0" layoutY="312.0" prefHeight="220.0" prefWidth="530.0" />

                <!-- Detalle del préstamo -->
                <Label id="labelDetalleTitulo" layoutX="25.0" layoutY="130.0" text="Detalle del préstamo:" />

                <!-- Botones inferiores -->
                <HBox layoutX="156.0" layoutY="717.0" spacing="10.0" />
                  <Button fx:id="btnFinalizarPrestamo" layoutX="214.0" layoutY="580.0" onAction="#finalizarPrestamo" prefHeight="26.0" prefWidth="166.0" text="Finalizar Préstamo" visible="false" />
            <Pane fx:id="detallePane" layoutX="25.0" layoutY="156.0" prefHeight="82.0" prefWidth="534.0">
               <children>
                        <Label layoutX="13.0" layoutY="14.0" text="N° de Referencia:" />
                        <Label layoutX="232.0" layoutY="14.0" text="Docente:" />
                        <Label layoutX="13.0" layoutY="46.0" text="Materia:" />
                  <Label fx:id="lblNroRef" layoutX="124.0" layoutY="16.0" prefHeight="20.0" prefWidth="85.0" />
                  <Label fx:id="lblMateria" layoutX="76.0" layoutY="48.0" prefHeight="20.0" prefWidth="191.0" />
                  <Label fx:id="lblDocente" layoutX="299.0" layoutY="16.0" prefHeight="20.0" prefWidth="193.0" />
               </children>
            </Pane>
                  <Button fx:id="btnIngresoManual" layoutX="226.0" layoutY="601.0" onAction="#cambiarAIngresoManual" text="Ingreso Manual" />
            <Label fx:id="lblProblemasQR" layoutX="153.0" layoutY="570.0" text="¿Problemas con el QR? Habilita el ingeso manual" />
            <Label fx:id="lblDevolucionManual" layoutX="27.0" layoutY="282.0" prefHeight="20.0" prefWidth="219.0" text="Seleccione un equipo para su devolución" visible="false" />
            <Button fx:id="btnDevolverManual" disable="true" layoutX="439.0" layoutY="266.0" mnemonicParsing="false" onAction="#devolverEquipoManual" prefHeight="30.0" prefWidth="102.0" text="Devolver" visible="false" />
            <Button fx:id="btnVolverQR" layoutX="226.0" layoutY="601.0" mnemonicParsing="false" onAction="#cambiarAIngresoQR" prefHeight="42.0" prefWidth="132.0" text="Ingreso con QR" visible="false" />
            <Button fx:id="btnCancelarSeleccion" layoutX="234.0" layoutY="607.0" mnemonicParsing="false" onAction="#cancelarSeleccion" text="Cancelar selección" visible="false" />
            <Label fx:id="lblDeshabilitarManual" layoutX="209.0" layoutY="570.0" text="Deshabilitar ingreso manual" visible="false" />
            <TextField fx:id="txtScan" layoutX="215.0" layoutY="407.0" opacity="0.0" />
            </children>
        </Pane>
    </center>
   <top>
            <Button fx:id="btnVolver" onAction="#irAPrestamosActivos" text="Volver" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets left="25.0" top="25.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
