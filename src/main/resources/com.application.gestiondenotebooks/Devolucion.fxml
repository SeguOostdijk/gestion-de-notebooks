<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="900.0"
            stylesheets="@style/devolucionStyle.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.application.gestiondenotebooks.controller.DevolucionController">

    <center>
        <Pane fx:id="devolucionPane"
              prefHeight="800.0"
              prefWidth="600.0"
              style="-fx-border-style: solid;"
              BorderPane.alignment="CENTER">

            <children>
                <!-- Título -->
                <Label layoutX="28.0" layoutY="61.0" text="Gestión de Devolución de Equipos" id="labelPrincipal">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>

                <Label layoutX="32.0" layoutY="94.0" text="Registre las devoluciones correspondientes al préstamo seleccionado." />

                <!-- Campo de ingreso de código -->
                <HBox layoutX="31.0" layoutY="130.0" spacing="10.0">
                    <children>
                        <TextField fx:id="txtCodigoEquipo" promptText="Ingrese el código del equipo" prefWidth="250.0" />
                        <Button fx:id="btnRegistrarDevolucion"
                                text="Registrar devolución"
                                onAction="#registrarDevolucion"
                                id="btnRegistrarDevolucion" />
                    </children>
                </HBox>

                <!-- Listado de equipos -->
                <Label layoutX="32.0" layoutY="178.0" text="Equipos del préstamo:" />
                <ListView fx:id="listEquipos" layoutX="31.0" layoutY="205.0" prefHeight="220.0" prefWidth="530.0" />

                <!-- Detalle del préstamo -->
                <Label layoutX="25.0" layoutY="445.0" text="Detalle del préstamo:" id="labelDetalleTitulo" />
                <VBox fx:id="detallePane" layoutX="31.0" layoutY="470.0" spacing="5.0">
                    <children>
                        <Label text="N° de Referencia:" />
                        <Label fx:id="lblRef" styleClass="detalle-label" />
                        <Label text="Docente:" />
                        <Label fx:id="lblDocente" styleClass="detalle-label" />
                        <Label text="Materia:" />
                        <Label fx:id="lblMateria" styleClass="detalle-label" />
                    </children>
                </VBox>

                <!-- Botones inferiores -->
                <HBox layoutX="156.0" layoutY="717.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnFinalizarPrestamo"
                                text="Finalizar préstamo"
                                onAction="#finalizarPrestamo"
                                visible="false"
                                id="btnFinalizar" />
                        <Button fx:id="btnVolver"
                                text="Volver"
                                onAction="#irAPrestamosActivos"
                                id="btnVolver" />
                    </children>
                </HBox>
            </children>
        </Pane>
    </center>
</BorderPane>






